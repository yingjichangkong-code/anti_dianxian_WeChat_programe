.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

.alert-button {
  background-color: #ff4d4f;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  margin-bottom: 10px;
}

.status {
  margin-top: 10px;
  font-size: 18px;
  color: #666;
}

.bluetooth-button, .ecg-button, .location-button {
  background-color: #52c41a;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  margin-top: 10px;
}

.bluetooth-status, .ecg-tip, .location-text {
  margin-top: 10px;
  font-size: 16px;
  color: #333;
}

canvas {
  margin-top: 10px;
  border: 1px solid #ccc;
}