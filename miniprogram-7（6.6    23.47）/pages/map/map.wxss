.map-container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

.distance-button {
  background-color: #1890ff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  margin-top: 20px;
}

.tip {
  margin-top: 20px;
  font-size: 16px;
  color: #666;
}

.location-text {
  margin-top: 10px;
  font-size: 14px;
  color: #333;
}