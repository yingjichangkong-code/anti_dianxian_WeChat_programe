<view class="login-container">
  <text class="title">用户登录</text>
  <view class="input-group">
    <input type="text" placeholder="请输入用户名" value="{{username}}" bindinput="bindUsernameInput" class="input" />
  </view>
  <view class="input-group">
    <input type="password" placeholder="请输入密码" value="{{password}}" bindinput="bindPasswordInput" class="input" />
  </view>
  <text class="error">{{error}}</text>
  <button bindtap="login" class="login-btn">登录</button>
</view>